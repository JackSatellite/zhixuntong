<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SQLite.ShujukuActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/id_shujuku_ed_zhanghao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="请输入账号！！" />

    <EditText
        android:id="@+id/id_shujuku_ed_mima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="请输入密码！！" />

    <Button
        android:id="@+id/id_shujuku_bt_tianjia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加数据" />

    <Button
        android:id="@+id/id_shujuku_bt_xianshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数据显示界面" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#000000"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="ID"
            />
        <TextView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#000000"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:textStyle="bold"
            android:text="账号"
            />
        <TextView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#000000"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:textStyle="bold"
            android:text="密码"
            />
        <TextView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#000000"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:textStyle="bold"
            android:text="用户类型"
            />
        <TextView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#000000"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000"
        />

    <ListView
        android:id="@+id/id_shujuku_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
